<p id="notice"><%= notice %></p>

<h1>Listing Builders</h1>

<table>
  <thead>
    <tr>
      <th>B</th>
      <th>B name</th>
      <th>B projects completed</th>
      <th>B weblink</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @builders.each do |builder| %>
      <tr>
        <td><%= builder.b_id %></td>
        <td><%= builder.b_name %></td>
        <td><%= builder.b_projects_completed %></td>
        <td><%= builder.b_weblink %></td>
        <td><%= link_to 'Show', builder %></td>
        <td><%= link_to 'Edit', edit_builder_path(builder) %></td>
        <td><%= link_to 'Destroy', builder, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

