<p id="notice"><%= notice %></p>

<h1>Listing Cities</h1>

<table>
  <thead>
    <tr>
      <th>C</th>
      <th>C name</th>
      <th>C description</th>
      <th>C landmark1</th>
      <th>C landmark2</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td><%= city.c_id %></td>
        <td><%= city.c_name %></td>
        <td><%= city.c_description %></td>
        <td><%= city.c_landmark1 %></td>
        <td><%= city.c_landmark2 %></td>
        <td><%= link_to 'Show', city %></td>
        <td><%= link_to 'Edit', edit_city_path(city) %></td>
        <td><%= link_to 'Destroy', city, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

